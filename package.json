{
  "name": "item-manager",
  "version": "1.0.0",
  "description": "Basic frontend application to list an items list.",
  "main": "src/index.ts",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "start": "webpack-dev-server --mode development",
    "build": "webpack --mode production",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:verbose": "jest --verbose",
    "new-component": "cp -R src/components/Button src/components/$npm_config_name",
    "coveralls": "jest --coverage && cat ./coverage/lcov.info | coveralls",
    "cypress:open": "npm start & wait-on http://localhost:3000 && cypress open && pkill -f node",
    "test:e2e": "npm start & wait-on http://localhost:3000 && cypress run && pkill -f node"
  },
  "author": "Oriol Egea",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.15.8",
    "@babel/plugin-transform-runtime": "^7.16.0",
    "@babel/preset-env": "^7.15.8",
    "@babel/preset-react": "^7.14.5",
    "@babel/preset-typescript": "^7.15.0",
    "@types/enzyme": "^3.10.10",
    "@types/jest": "^27.0.2",
    "@types/react-dom": "^17.0.10",
    "@typescript-eslint/eslint-plugin": "^5.2.0",
    "@typescript-eslint/parser": "^5.2.0",
    "@wojtekmaj/enzyme-adapter-react-17": "^0.6.5",
    "babel-jest": "^27.3.1",
    "babel-loader": "^8.2.3",
    "css-loader": "^6.5.0",
    "cypress": "^8.7.0",
    "eslint": "^7.32.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.26.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "html-webpack-plugin": "^5.5.0",
    "jest": "^27.3.1",
    "sass": "^1.43.4",
    "sass-loader": "^12.3.0",
    "style-loader": "^3.3.1",
    "webpack": "^5.61.0",
    "webpack-cli": "^4.9.1",
    "webpack-dev-server": "^4.4.0"
  },
  "dependencies": {
    "@jest/globals": "^27.3.1",
    "@types/react": "^17.0.33",
    "axios": "^0.24.0",
    "coveralls": "^3.1.1",
    "enzyme": "^3.11.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "recoil": "^0.4.1",
    "typescript": "^4.7.4",
    "wait-on": "^6.0.0"
  },
  "jest": {
    "setupFilesAfterEnv": [
      "<rootDir>/test-setup.js"
    ],
    "testEnvironment": "jsdom",
    "testPathIgnorePatterns": [
      "/cypress/"
    ]
  }
}
